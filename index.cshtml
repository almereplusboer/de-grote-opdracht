<!DOCTYPE html>
@using System.Data;
@using XmlCrud.App_Code;

@{ 
    SongMethods mySongMethods = new SongMehtods();
    string file = @"~\App_Data\Playlist.xml";
    DataSet ds = mySongMethods.GetAllSongs(file);
}
<table>
    @foreach (DataRow dr in ds.Tables["song"].Rows)
    {
        <tr>
            <td>@dr["id"]</td>
            <td>@dr["artist"]</td>
            <td>@dr["title"]</td>
            <td>@dr["year"]</td>
            <td>@dr["genre"]</td>
            <td>@dr["time"]</td>
            <td>@dr["file"]</td>
        </tr>
    }
</table>
