<!DOCTYPE html>
@using System.Data;
@using XmlCrud.App_Code;

@{ 
    SongMethods mySongMethods = new SongMehtods();
    string file = @"~\App_Data\Playlist.xml";
    DataSet ds = mySongMethods.GetAllSongs(file);
}
<html>
<head>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <br /><br />

    <table class="table-borderd">
        <tr>
            <th>Id</th>
            <th>Artist</th>
            <th>Title</th>
            <th>Year</th>
            <th>Genre</th>
            <th>Time</th>
            <th>File</th>
        </tr>

        @foreach (DataRow dr in ds.Tables["song"].Rows)
        {
            <tr>
                <td>@dr["id"]</td>
                <td>@dr["artist"]</td>
                <td>@dr["title"]</td>
                <td>@dr["year"]</td>
                <td>@dr["genre"]</td>
                <td>@dr["time"]</td>
                <td>@dr["file"]</td>
            </tr>
        }
    </table>

    <br /><br />
    <a href="Pages\CreateSong.cshtml">Add new song</a>
</body>
</html>
